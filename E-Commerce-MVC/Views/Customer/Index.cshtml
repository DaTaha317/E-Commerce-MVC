@model List<Customer>

@{
    int i = 0;
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Last</th>
            <th scope="col">Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Customer item in Model)
        { 
        <tr>
            <td>@(++i)</td>
            <td>@item.FirstName @item.LastName</td>
            <td>@item.Email</td>
        </tr>
        }
    </tbody>
</table>