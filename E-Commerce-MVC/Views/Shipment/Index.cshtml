@model List<Shipment>

@{
    int i = 0;
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Customer</th>
            <th scope="col">Country</th>
            <th scope="col">City</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Shipment item in Model)
        {
            <tr>
                <td>@(++i)</td>
                <td>@item.customer.FirstName @item.customer.LastName</td>
                <td>@item.Country</td>
                <td>@item.City</td>
            </tr>
        }
    </tbody>
</table>